<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:f='urn:import:org.vectomatic.file'>
    <ui:with field='bundle' type='com.moodle.client.app.AppBundle' />
    <g:FlowPanel height="100%">
        <g:Label>Выберете файл формата MoodleXML для конвертации.</g:Label>
        <f:FileUploadExt ui:field="fileUpload"/>
        <g:Label>После выбора файла скопируйте текст ниже и вставьте в его в Word.</g:Label>
        <g:HTML ui:field="convertedText"/>
    </g:FlowPanel>
</ui:UiBinder>
