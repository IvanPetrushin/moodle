<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:f='urn:import:org.vectomatic.file'>
    <ui:with field='bundle' type='com.moodle.client.app.AppBundle' />
    <g:FlowPanel>
        <g:Label>Click the browse button to select local SVG, bitmap (png, gif, jpg) or text files to load</g:Label>
        <f:FileUploadExt ui:field="fileUpload" />
        <g:Button text="Конвертировать" ui:field="convertBtn" />
        <g:FlowPanel ui:field="imagePanel"  styleName="{bundle.css.imagePanel}" />
    </g:FlowPanel>
</ui:UiBinder>
